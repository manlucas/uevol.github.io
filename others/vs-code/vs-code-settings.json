{
    "editor.minimap.enabled": false,
    "workbench.startupEditor": "none",
    "python.pythonPath": "/usr/local/bin/python",
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "git.ignoreMissingGitWarning": true,
    "files.exclude": {
        "**/*.pyc": true
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.suggestSelection": "first",
    "editor.defaultFormatter": "vscode.python",
    "python.autoComplete.addBrackets": true,
    "editor.wordWrap": "on",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "workbench.colorTheme": "Monokai ST3",
    "workbench.iconTheme": "vscode-icons",
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "breadcrumbs.enabled": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.settings.openDefaultKeybindings": true,
    "terminal.explorerKind": "external",
    "topper.customTemplateParameters": [
        {
            "personalProfile": {
                "author": "yw",
                "website": "https://uevol.github.io/",
                "email": "uevol@outlook.com",
                "description": "add description"
            }
        },
        {
            "officeProfile": {
                "author": "WillYang",
                "department": "科技技术部北上A组",
                "email": "WillYang@canway.net",
                "description": "add description"
            }
        }
    ],
    "topper.defaultHeaderTemplate": {
        "default": {
            "headerBegin": "/**",
            "headerPrefix": "*",
            "headerEnd": "*/",
            "template": [
                "${headerPrefix} ${fileName}",
                "${headerPrefix} @author ${author}",
                "${headerPrefix} @email ${email}",
                "${headerPrefix} @description ${description}",
                "${headerPrefix} @created ${createdDate}",
                "${headerPrefix} @last-modified ${lastModifiedDate}",
            ]
        }
    },
    "topper.headerTemplates": [
        {
            "python": {
                "headerBegin": "# -*- coding: utf-8 -*-",
                "headerPrefix": "#",
                "headerEnd": "#",
                "template": [
                    "${headerBegin}",
                    "${headerPrefix} @filename ${fileName}",
                    "${headerPrefix} @author ${author}",
                    "${headerPrefix} @email ${email}",
                    "${headerPrefix} @description ${description}",
                    "${headerPrefix} @created ${createdDate}",
                    "${headerPrefix} @last-modified ${lastModifiedDate}"
                ]
            }
        },
        {
            "javascript": {
                "headerBegin": "/**",
                "headerPrefix": "*",
                "headerEnd": "*/",
                "template": [
                    "${headerBegin}",
                    "${headerPrefix} ${fileName}",
                    "${headerPrefix} @author ${author}",
                    "${headerPrefix} @email ${email}",
                    "${headerPrefix} @description ${description}",
                    "${headerPrefix} @created ${createdDate}",
                    "${headerPrefix} @last-modified ${lastModifiedDate}",
                    "${headerEnd}"
                ]
            }
        }
    ]
}
